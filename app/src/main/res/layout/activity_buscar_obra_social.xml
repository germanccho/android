<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UI.View.ObraSocial.BuscarObraSocial"
    android:background="@drawable/gradient"
    android:orientation="vertical">

    <include
        layout="@layout/toolbar_obra_social"
        android:id="@+id/toolbar"></include>





    <android.support.v7.widget.SearchView
        android:id="@+id/buscarOS"
        style="@style/barraBuscar"
        app:defaultQueryHint="Buscar..."
        />


    <TableRow
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="50dp">

        <TextView
            android:id="@+id/txtNombreOS"
            style="@style/textoTituloTabla"
            android:layout_width="150dp"
            android:text="Nombre" />

        <TextView
            android:id="@+id/txtTelefonoOS"
            style="@style/textoTituloTabla"
            android:layout_width="150dp"
            android:text="Telefono" />

        <TextView
            android:layout_width="40dp"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="40dp"
            android:layout_height="wrap_content" />

    </TableRow>

    <android.support.v7.widget.RecyclerView
        android:layout_width="wrap_content"
        android:layout_height="300dp"
        android:id="@+id/listaOS"
        class="android.support.v7.widget.RecyclerView"
        android:layout_gravity="center"/>


<android.support.v7.widget.CardView
        android:layout_width="180dp"
        android:layout_height="80dp"
        app:cardBackgroundColor="#00ffffff"
        app:cardCornerRadius="4dp"
        android:layout_marginTop="10dp"
        style="@style/iconoBotones"
        android:layout_marginBottom="31dp"
        android:layout_centerHorizontal="true"
    >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/btnVolverGestionarOSBuscar"
            >
            <TextView
                android:id="@+id/textView3"
                android:text="Volver"
                style="@style/textobotones2" />

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/icon_flecha_atras"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                />
        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>
